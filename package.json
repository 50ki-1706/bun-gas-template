{
  "name": "bun-gas-template",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@google/clasp": "^3.0.6-alpha",
    "@types/bun": "latest",
    "@types/google-apps-script": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "cpx": "^1.5.0",
    "eslint": "^9.36.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "build:ts": "tsc",
    "build:manifest": "cpx 'src/appsscript.json' dist",
    "build": "bun run clean && bun run build:ts && bun run build:manifest",
    "deploy": "bun run build && clasp push",
    "start-dev": "bun run deploy && clasp open"
  }
}